<input type="text" id="msg" placeholder="Type message..." onkeydown="send(event)">

<script>
function send(e){
  if(e.key === "Enter"){
    let chat = document.getElementById("chat");
    let msg = document.getElementById("msg");

    if(msg.value.trim() !== ""){
      chat.innerHTML += "<div class='message you'>ðŸŸ¢ You: " + msg.value + "</div>";
      msg.value = "";
      chat.scrollTop = chat.scrollHeight;
    }
  }
}
</script>

